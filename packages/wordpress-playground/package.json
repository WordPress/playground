{
  "name": "@wordpress/playground",
  "version": "0.1.4",
  "description": "WordPress Playground",
  "main": "build/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/WordPress/wordpress-playground"
  },
  "homepage": "https://developer.wordpress.org/playground",
  "files": [
    "wp",
    "build"
  ],
  "type": "module",
  "types": "build/types",
  "scripts": {
    "dev": "npm-run-all --parallel \"dev:*\"",
    "dev:js": "vite --config=vite.config.ts",
    "dev:types": "tsc -p ./tsconfig.json --watch",
    "preview": "vite preview --config=vite.config.ts",
    "build": "npm-run-all \"build:js\" \"build:types\"",
    "build:js": "vite build --config=vite.config.ts --emptyOutDir",
    "build:types": "rm -rf ./build/types; tsc -p ./tsconfig.json",
    "build:wp": "npm-run-all \"build:wp:*\"",
    "build:wp:nightly": "KEEP_THEME=twentytwentythree WP_ZIP_URL=https://wordpress.org/nightly-builds/wordpress-latest.zip OUT_FILENAME=wp-nightly node src/wp-build/build.js",
    "build:wp:6.1": "KEEP_THEME=twentytwentythree WP_ZIP_URL=https://wordpress.org/wordpress-6.1.1.zip OUT_FILENAME=wp-6.1 node src/wp-build/build.js",
    "build:wp:6.0": "KEEP_THEME=twentytwentytwo WP_ZIP_URL=https://wordpress.org/wordpress-6.0.3.zip OUT_FILENAME=wp-6.0 node src/wp-build/build.js",
    "build:wp:5.9": "KEEP_THEME=twentytwentyone WP_ZIP_URL=https://wordpress.org/wordpress-5.9.5.zip OUT_FILENAME=wp-5.9 node src/wp-build/build.js",
    "clean": "rm -rf build/*",
    "test": "jest"
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "author": "The WordPress contributors",
  "license": "Apache-2.0",
  "dependencies": {
    "@wordpress/php-wasm": "0.0.1",
    "@wordpress/plugin-ide": "0.1.4",
    "classnames": "^2.3.2",
    "comlink": "^4.4.1",
    "file-saver": "^2.0.5",
    "glob": "^9.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-modal": "^3.16.1",
    "rollup-plugin-ignore-import": "^1.3.2",
    "rollup-pluginutils": "^2.8.2",
    "typescript-plugin-css-modules": "^4.2.3",
    "vite-plugin-external": "^1.2.8",
    "vite-plugin-filter-replace": "^0.1.10"
  },
  "devDependencies": {
    "@types/node": "12.20.24",
    "esbuild": "^0.15.15",
    "esbuild-plugin-copy": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "typescript": "beta",
    "vite": "^4.1.4"
  }
}
