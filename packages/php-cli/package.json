{
  "name": "php-cli",
  "version": "0.1.4",
  "description": "PHP CLI via WebAssembly. Part of WordPress Playground.",
  "main": "build/php.js",
  "bin": "build/php-cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/WordPress/wordpress-playground"
  },
  "homepage": "https://developer.wordpress.org/playground",
  "files": [
    "build",
    "build-types"
  ],
  "exports": {
    "./node": {
      "import": "./build/node/index.mjs",
      "require": "./build/node/index.mjs",
      "default": "./build/node/index.mjs"
    }
  },
  "types": "build-types",
  "scripts": {
    "dev": "npm-run-all --parallel dev:js dev:types",
    "dev:js": "node esbuild.mjs --watch",
    "dev:types": "npm-run-all --parallel \"build:types:* -- --watch\"",
    "build": "npm-run-all --parallel \"build:*\"",
    "build:js": "node esbuild.mjs",
    "build:types": "npm run clean:types; tsc -p ./tsconfig.json",
    "clean": "npm-run-all --parallel clean:*",
    "clean:all": "rm -rf build/* ./build-*/*",
    "clean:types": "rm -rf build-types/* *.tsbuildinfo",
    "test": "jest"
  },
  "author": "The WordPress contributors",
  "contributors": [
    {
      "name": "Adam Zielinski",
      "email": "adam@adamziel.com",
      "url": "https://github.com/adamziel"
    }
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "ws": "^8.12.0",
    "@wordpress/php-wasm": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "12.20.24",
    "esbuild": "^0.17.11",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.0.2",
    "eslint": "^8.35.0",
    "typescript": "^4.9.5"
  }
}
