{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": [ "dom", "ESNext" ],
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"include": [ 
		"src/types.d.ts",
		"src/Globals.d.ts",
		"src/**/*",
		"src/**/*.module.css",
	],
	"exclude": [
		 "src/service-worker.ts",
		 "src/wordpress/*/**/*",
		 "src/wp-build/**/*",
		 "build/**/*",
		 "build-*/**/*",
		 "build-types/**/*"
 	],
	"references": [
		{ "path": "../php-wasm/tsconfig.json" }
	]
}
