{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,

		"jsx": "react",
		"lib": [ "dom", "ESNext" ],
		"target": "esnext",
		"module": "esnext",
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"removeComments": false,
		"skipLibCheck": true,

		"strict": true,
		"composite": true,

		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "bundler",

		"esModuleInterop": false,

		"declarationDir": "build/types",
		"rootDir": "src",
		"outDir": "build/types",
		"baseUrl": ".",
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"include": [ 
		"src/types.d.ts",
		"src/Globals.d.ts",
		"src/**/*",
		"src/**/*.module.css",
	],
	"exclude": [
		 "src/wordpress/*/**/*",
		 "src/wp-build/**/*",
		 "build/**/*",
		 "build-*/**/*",
		 "build-types/**/*"
 	],
	"references": [
		{ "path": "../php-wasm/tsconfig.json" },
		{ "path": "../wordpress-plugin-ide/tsconfig.json" }
	]
}
