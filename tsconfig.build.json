{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,

		"jsx": "react",
		"lib": [ "dom", "ESNext" ],
		"target": "esnext",
		"module": "esnext",
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"removeComments": false,
		"skipLibCheck": true,

		"strict": true,
		"composite": true,

		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "bundler",
		"esModuleInterop": false
	},
	"exclude": [
	  "node_modules",
	  "packages/*/build",
	  "packages/php-wasm/src/php",
	  "packages/playground/src/wordpress",
	  "packages/playground/src/wp-build"
	]
}
